<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="icon" href="favicon.ico">

        {% block styles %}
            {% stylesheets  '../vendor/bower-asset/bootstrap/dist/css/bootstrap.css' %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
            {% endstylesheets %}

        {% endblock %}
        <title>{% block title %}Forms demo{% endblock %}</title>
    {% endblock %}
</head>

<body>

<nav class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">{% block brand %}Demo{% endblock %}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('entity_list', {'alias': 'ExampleBundle:StubEntity'}) }}">Stub Entity</a></li>
                <li><a href="{{ path('entity_list', {'alias': 'ExampleBundle:RelatedEntity'}) }}">Related Entity</a>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">

    {% block body %}{% endblock %}

</div><!-- /.container -->

{% block javascripts %}
    {% javascripts  '../vendor/bower-asset/jquery/dist/jquery.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts  '../vendor/bower-asset/bootstrap/dist/js/bootstrap.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
